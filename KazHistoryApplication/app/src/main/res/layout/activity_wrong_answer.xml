<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.grass.kazhistoryapplication.WrongAnswerActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bar"
        android:id="@+id/frameLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="112dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/wrongicon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Қап "
            android:textSize="32sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="#f0f0f0"/>

    </FrameLayout>

    <TextView
        android:layout_width="299dp"
        android:layout_height="178dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:layout_gravity="top|center"
        android:textColor="#ff000000"
        android:layout_marginTop="200dp"
        android:textSize="30sp"
        android:textIsSelectable="false"
        android:layout_marginLeft="40dp"
        android:text="Kazakh Khandygy 1465 jyly kurylgan" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonNext2"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:background="@drawable/nexticon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

</RelativeLayout>
