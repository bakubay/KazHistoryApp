<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.grass.kazhistoryapplication.QuestionActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bar">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/heartView1"
        android:layout_gravity="center|end"
        android:layout_marginRight="150dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/heartView2"
        android:layout_gravity="center|end"
        android:layout_marginRight="100dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/heartView3"
        android:layout_gravity="center|end"
        android:layout_marginRight="50dp" />
 </FrameLayout>

    <TextView
        android:layout_width="299dp"
        android:layout_height="178dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:layout_gravity="top|center"
        android:textColor="#ff000000"
        android:layout_marginTop="120dp"
        android:textSize="30sp"
        android:textIsSelectable="false"
        android:layout_marginLeft="10dp"
        android:text="Kazakh Khandygy 1465 jyly kurylgan" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/noButton"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="46dp"
        android:clickable="true"
        android:baselineAlignBottom="false"
        android:background="@drawable/pmbtn"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/yesButton"
        android:layout_marginLeft="50dp"
        android:background="@drawable/pmbtn2"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="50dp" />


</FrameLayout>
