<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.grass.kazhistoryapplication.GameOverActivity">

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ОЙЫН БІТТІ!"
        android:id="@+id/textView4"
        android:textColor="#ffff0000"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:layout_width="216dp"
        android:layout_height="240dp"
        android:id="@+id/imageView5"
        android:background="@drawable/brokenheart"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        />


</FrameLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/buttonRetry"
        android:background="#ffa26e07"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="130dp"
        android:layout_gravity="center_horizontal"
        android:text="ҚАЙТАДАН"
        android:textColor="#ffffffff"
        android:textSize="20sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/buttonMenu"
        android:background="#ffa26e07"
        android:layout_marginTop="42dp"
        android:textColor="#FFFFFF"
        android:text="МӘЗІР"
        android:textSize="20sp"
        android:layout_below="@+id/buttonRetry"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
